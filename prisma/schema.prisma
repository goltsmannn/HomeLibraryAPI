generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String                 @id @default(uuid())
  login           String                 @unique
  password        String
  version         Int
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  FavoriteAlbums  Favorites_UserAlbum[]
  FavoriteArtists Favorites_UserArtist[]
  FavoriteTracks  Favorites_UserTrack[]
}

model Artist {
  id          String                 @id @default(uuid())
  name        String
  grammy      Boolean
  albums      Album[]
  FavoritedBy Favorites_UserArtist[]
  tracks      Track[]
}

model Album {
  id          String                @id @default(uuid())
  name        String
  year        Int
  artistId    String?
  Artist      Artist?               @relation(fields: [artistId], references: [id])
  FavoritedBy Favorites_UserAlbum[]
  tracks      Track[]
}

model Track {
  id          String                @id @default(uuid())
  name        String
  duration    Int
  artistId    String?
  albumId     String?
  FavoritedBy Favorites_UserTrack[]
  album       Album?                @relation(fields: [albumId], references: [id])
  Artist      Artist?               @relation(fields: [artistId], references: [id])
}

model Favorites_UserTrack {
  trackId String
  userId  String
  Track   Track  @relation(fields: [trackId], references: [id], onDelete: Cascade)
  User    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([trackId, userId])
}

model Favorites_UserAlbum {
  albumId String
  userId  String
  Album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  User    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([albumId, userId])
}

model Favorites_UserArtist {
  artistId String
  userId   String
  Artist   Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)
  User     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([artistId, userId])
}
